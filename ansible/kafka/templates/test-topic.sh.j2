#!/bin/bash

#Creating a test topic

echo "Creating a test topic"
/usr/local/etc/kafka/bin/kafka-topics.sh --create --zookeeper 127.0.0.1:2181 --replication-factor 1 --partitions 1 --topic test


echo "Please check that the topic is replicated the correct amount of times"
/usr/local/etc/kafka/bin/kafka-topics.sh --describe --zookeeper 127.0.0.1:2181 --topic test